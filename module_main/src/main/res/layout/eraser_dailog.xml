<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:background="@color/gray_color"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_eraser_color"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_eraser_color_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_eraser_color_gray_bg"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rb_eraser_color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:layout_marginEnd="130dp"
                android:background="@drawable/selector_eraser_color_white_bg"
                android:button="@null" />

            <RadioButton
                android:id="@+id/rb_eraser_color_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_eraser_color_black_bg"
                android:button="@null" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_eraser_size"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_eraser_size_xs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableStart="@drawable/selector_eraser_size_xs_bg"
                android:padding="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/rb_eraser_color_white"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/rb_eraser_size_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableStart="@drawable/selector_eraser_size_s_bg"
                android:padding="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/rb_eraser_size_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableStart="@drawable/selector_eraser_size_m_bg"
                android:padding="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/rb_eraser_color_white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/rb_eraser_size_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableStart="@drawable/selector_eraser_size_l_bg"
                android:padding="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/rb_eraser_color_white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RadioButton
                android:id="@+id/rb_eraser_size_xl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:drawableStart="@drawable/selector_eraser_size_xl_bg"
                android:padding="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/rb_eraser_color_white"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="5dp">


        <ImageView
            android:id="@+id/iv_eraser_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/ic_virtual_wall_cancel" />

        <TextView
            android:id="@+id/tv_eraser_dialog_color"
            style="@style/public_text_XS_style"
            android:layout_width="0dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_check"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/eraser_color" />

        <TextView
            android:id="@+id/tv_eraser_dialog_size"
            style="@style/public_text_XS_style"
            android:layout_width="0dp"
            android:layout_marginEnd="30dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_check"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="@string/eraser_size" />


        <TextView
            android:id="@+id/tv_eraser_dialog_confirm"
            style="@style/public_text_XS_style"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/selector_check"
            android:drawablePadding="15dp"
            android:gravity="center"
            android:text="@string/Eraser_confirm" />

        <ImageView
            android:id="@+id/iv_eraser_dialog_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="40dp"
            android:src="@drawable/ic_virtual_wall_selected" />
    </LinearLayout>
</LinearLayout>