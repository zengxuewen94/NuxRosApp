<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="520dp"
    android:layout_height="340dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="#FaFaFa"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/tv_map_control_name_input_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/slam_map_save_title"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/dimen_S"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_map_control_name_input_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:background="@color/light_gray_color"
            app:layout_constraintTop_toBottomOf="@id/tv_map_control_name_input_title" />

        <EditText
            android:id="@+id/et_map_control_name_input_name"
            style="@style/blue_stroke_edit_style"
            android:layout_height="80dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="25dp"
            android:gravity="center"
            android:hint="@string/slam_map_save_name_hint"
            android:text=""
            android:textColor="@color/light_gray_color"
            android:textColorHint="@color/light_gray_color"
            android:textSize="@dimen/dimen_S"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_map_control_name_input_line" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_map_control_name_input_cancel"
            android:layout_width="155dp"
            android:layout_height="72dp"
            android:layout_marginStart="25dp"

            android:background="@drawable/selector_button_gray_15bg"
            android:gravity="center"
            android:text="@string/common_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_S"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_map_control_name_input_confirm"
            android:layout_width="155dp"
            android:layout_height="72dp"
            android:layout_marginEnd="25dp"

            android:background="@drawable/selector_button_blue_15bg"
            android:gravity="center"
            android:text="@string/common_confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_S"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>

