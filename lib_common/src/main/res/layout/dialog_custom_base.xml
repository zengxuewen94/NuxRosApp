<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_dialog_white_bg"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_public_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="80dp" />


    <TextView
        android:id="@+id/tv_public_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="权限没有授予，应用无法使用"

        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="80dp"
        android:textColor="@color/gray_color"
        android:textSize="60dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|bottom"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_public_dialog_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="40dp"
            android:text="取消"
            android:textColor="@color/gray_color"
            android:visibility="gone" />
        <TextView
            android:id="@+id/bt_public_dialog_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:layout_marginRight="60dp"
            android:text="确定"
            android:background="@drawable/selector_white_gray_bg"
            android:textSize="60dp"
            android:textColor="@color/gray_color" />
    </LinearLayout>


</LinearLayout>