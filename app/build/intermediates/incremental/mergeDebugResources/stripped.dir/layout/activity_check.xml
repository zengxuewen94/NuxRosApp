<?xml version="1.0" encoding="utf-8"?>

                                                       
                                                   

    

                                          
                 
                                 
                                                                 
           

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cl_check_parent"
        android:orientation="vertical"
        android:paddingTop="10dp" android:tag="layout/activity_check_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

        <!--<com.eaibot.layer.LayerContainer
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>-->


        <ImageButton
            android:id="@+id/btn_go_1m"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="binding_1"                                 
                                                                       

            app:layout_constraintBottom_toTopOf="@id/btn_turn_360"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageButton
            android:id="@+id/btn_turn_360"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:tag="binding_2"                             
                                                                   
            app:layout_constraintBottom_toTopOf="@id/view_center"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/view_center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerInParent="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/btn_recharge"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:tag="binding_3"                             
                                                                   
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_center" />

        <Button
            android:id="@+id/btn_change_laserscan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:tag="binding_4"                                      
                                                                            
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_recharge" />


        <TextView
            android:id="@+id/robot_pose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="10dp"
            android:tag="binding_5"                     
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/robot_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:paddingTop="5dp"
            android:tag="binding_6"                      
            android:textColor="#00ccff"
            android:textSize="18sp" />


        <LinearLayout
            android:id="@+id/linearLayout_hint_sonar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/text_style"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="9dp"
            android:paddingTop="4dp"
            android:paddingRight="12dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toTopOf="@id/ll_check_sonar"
            app:layout_constraintRight_toRightOf="@id/ll_check_sonar"
            android:tag="binding_7"                                 >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/grayhook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 对应位置超声波未插入" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/redhock" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 超声波测距内无障碍物" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/greenhook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 超声波测距内有障碍物" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_distance"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/distance_bluestyle"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:tag="binding_8"                                
            app:layout_constraintLeft_toLeftOf="@id/hint_finger"
            app:layout_constraintRight_toRightOf="@id/hint_finger"
            app:layout_constraintTop_toBottomOf="@id/linearLayout_hint_sonar">

            <TextView
                android:id="@+id/distance_sonar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:clickable="false"
                android:text="右后:  -/-" />

            <TextView
                android:id="@+id/distance_sonar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="右前:  -/-" />

            <TextView
                android:id="@+id/distance_sonar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="正前:  -/-" />

            <TextView
                android:id="@+id/distance_sonar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="左前:  -/-" />

            <TextView
                android:id="@+id/distance_sonar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="左后:  -/-" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_check_sonar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/sonar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="binding_9"                                            
                android:layout_gravity="center_vertical"
                android:text="超声波: "
                                                                       
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 "
                android:textColor="#0dca00"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/sonar1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/grayhook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 2 "
                android:textColor="#0dca00"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/sonar2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/grayhook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 3 "
                android:textColor="#0dca00"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/sonar3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/grayhook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 4 "
                android:textColor="#0dca00"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/sonar4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/grayhook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 5 "
                android:textColor="#0dca00"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/sonar5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/grayhook" />

            <Button
                android:id="@+id/btn_show_hint"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:tag="binding_10"                                           
                android:background="@drawable/question" />

        </LinearLayout>


        <ImageView
            android:id="@+id/hint_finger"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_hand"
            app:layout_constraintLeft_toLeftOf="@id/ll_check_sonar"
            app:layout_constraintTop_toBottomOf="@id/ll_check_sonar" />

        <com.eaibot.running.view.WebHandleView
            android:id="@+id/dashgo_handle_control"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:tag="binding_11"                                                      

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/imuText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:tag="binding_12"                  
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />



        <LinearLayout
            android:id="@+id/linearLayout_hint_voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/text_style"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:tag="binding_13"                           
            app:layout_constraintRight_toLeftOf="@id/text_voltage"
            app:layout_constraintTop_toBottomOf="@id/text_voltage">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电量数字为黑色：暂未充电" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电量数字为蓝色：回充充电"
                android:visibility="gone" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电量数字为绿色：正在充电" />

        </LinearLayout>

        <ImageView
            android:id="@+id/stop_status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/stop_greenicon"
            app:layout_constraintBottom_toBottomOf="@id/textView"
            app:layout_constraintRight_toLeftOf="@id/textView"
            app:layout_constraintTop_toTopOf="@id/textView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="binding_14"                                             
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="电量: "
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/text_voltage" />

        <TextView
            android:id="@+id/text_voltage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:minWidth="15dp"
            android:tag="binding_15"                                             
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
                                                          
                                                                    
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
         